{
  "manifest_version": 3,
  "name": "PoC AI Content Detector",
  "version": "1.0.0",
  "description": "Detect AI-generated content and bot activity on any webpage. Get real-time analysis with visual highlighting and detailed statistics.",
  "author": "PoC Team",

  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],

  "host_permissions": [
    "<all_urls>"
  ],

  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "content/detector.js",
        "content/highlighter.js",
        "content/twitter.js",
        "content/ad-detector.js",
        "content/account-analyzer.js",
        "content/expose-bot.js"
      ],
      "css": ["content/styles.css"],
      "run_at": "document_idle"
    }
  ],

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "options_page": "options/options.html"
}
